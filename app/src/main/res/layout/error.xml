<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/error_containter"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="124dp">

        <ImageView
            android:id="@+id/error_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cloud_off"
            android:tint="@color/color_forecast_preview"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/error_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="@dimen/error_title_text_size"
            android:textColor="@color/color_text"
            android:fontFamily="sans-serif-medium"
            android:text="@string/error_common_title"/>
        <TextView
            android:id="@+id/error_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/error_description_text_size"
            android:textColor="@color/color_text_light"
            android:text="@string/error_common_description"/>

        <Button
            android:id="@+id/but_reload"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/reload_but"/>
    </LinearLayout>
</FrameLayout>
